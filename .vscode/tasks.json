{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Launch: build active file",
            "command": "/usr/bin/g++",//改成自己需要用的编译器
            "args": [
                "-g",
                "${file}",
                "src/*.cpp",
                "-o",
                "${fileDirname}/out/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "use /usr/bin/g++"
        }
    ]
}